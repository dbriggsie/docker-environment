{
  "name": "enigma-js",
  "version": "0.3.0",
  "description": "The Javascript client for the Enigma Network",
  "main": "lib/enigma-js.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "jest",
    "test:integration": "jest -c=test/integrationTests/jest.config.js",
    "test:watch": "jest --watch",
    "report-coverage": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:enigmampc/enigma-contract.git"
  },
  "keywords": [
    "webpack",
    "es6",
    "starter",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
  "author": "Frederic Fortier <fred@enigma.co>",
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "https://enigma.co",
  "dependencies": {
    "enigma-js": "^0.3.0",
    "any-promise": "^1.3.0",
    "buffer": "^5.1.0",
    "core-js": "^3.1.4",
    "elliptic": "6.4.0",
    "eth-crypto": "^1.2.2",
    "eventemitter3": "^3.1.0",
    "jsbi": "^2.0.5",
    "net": "^1.0.2",
    "node-forge": "^0.7.6",
    "regenerator-runtime": "^0.13.3",
    "web3-utils": "1.0.0-beta.37"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.2",
    "chai-events": "0.0.1",
    "codecov": "^3.5.0",
    "dockerode": "^2.5.8",
    "eslint": "^5.4.0",
    "eslint-config-google": "^0.9.1",
    "eslint-loader": "^2.0.0",
    "jest": "^24.8.0",
    "jest-circus": "^24.8.0",
    "jsdom": "11.11.0",
    "jsdom-global": "3.0.2",
    "mock-local-storage": "^1.1.7",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "web3": "1.0.0-beta.37",
    "webpack": "^4.12.2",
    "webpack-cli": "^3.0.8",
    "yargs": "^10.0.3"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.init.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/integrationTests/"
    ],
    "testRunner": "jest-circus/runner"
  }
}
